@model ZooPlanet.Models.ViewModels.EspeciesViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Agregar Especies</h1>

<form method="post" asp-controller="Administrador" asp-action="Agregar" >
    <label>Nombre:</label>
    <input required="required" asp-for="Especies.Especie" />@{
        Layout = "_Layout";
    }
    <label>Clase:</label>
    <select required="required" asp-for="Especies.IdClase" asp-items="@(new SelectList(Model.Clases, "Id", "Nombre"))">
        <option selected="selected" value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input required="required" asp-for="Especies.Habitat"/>
    <label>Peso:</label>
    <input type="number" required="required" asp-for="Especies.Peso" step="0.1" />
    <label>Tamaño:</label>
    <input required="required" type="number" asp-for="Especies.Tamaño" step="0.1"  />
    <label>Observaciones:</label>
    <textarea required="required" asp-for="Especies.Observaciones"></textarea>

    <input type="submit" value="Agregar" />
    <a href="~/Admin">
        <input type="button" value="Cancelar" />
    </a>
</form>