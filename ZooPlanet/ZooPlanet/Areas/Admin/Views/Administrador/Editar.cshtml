@model ZooPlanet.Models.ViewModels.EspeciesViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Editar Especies</h1>

<form method="post" asp-action="Editar" asp-controller="Administrador">
    <input type="hidden" id="idEspecie" asp-for="Especies.Id" />
    <label>Nombre:</label>
    <input required="required" type="text" asp-for="Especies.Especie" />
    <label>Clase:</label>
    <select required="required" asp-for="Especies.IdClase" asp-items="@(new SelectList(Model.Clases,"Id", "Nombre" ))">
        <option selected="selected" value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input required="required" type="text" asp-for="Especies.Habitat" />
    <label>Peso:</label>
    <input required="required" type="number" step="0.1" asp-for="Especies.Peso" />
    <label>Tamaño:</label>
    <input required="required" type="number" step="0.1" asp-for="Especies.Tamaño" />
    <label>Observaciones:</label>
    <textarea required="required" asp-for="Especies.Observaciones"></textarea>



    <input type="submit" value="Editar" />
    <a href="~/Admin">
        <input type="button" value="Cancelar" />
    </a>

</form>